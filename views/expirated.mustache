{{> header}}
{{#errors}}
<p style="color: red; font-weight: bold">{{.}}<p>
{{/errors}}
<style media="screen">
#message {
    max-width: 1250px;
}
</style>
<link rel="stylesheet" media="screen,print" href='/static/sortable/sortable.css'>
<script src="/static/sortable/sortable.js"></script>
<table class="sortable">
<thead>
<h1>Comptes Expirés</h1>
<tr>
    <th>Id</th>
    <th>Date de fin</th>
    <th>Compte Email</th> 
    <th>Redirections</th>
    <th>Fiche sur Github</th>
</tr>
</thead>
<tbody>
{{#emails}}
<tr>
  <td>{{id}}</td>
  <td>{{endDate}}</td>
  <td>{{#account}}✔ Oui{{/account}}{{^account}}Non{{/account}}</td>
  <td><ul>{{#redirections}}
    <li>{{.}}</li>
    {{/redirections}}
  </ul>
  </td> 
  <td><a href="https://github.com/betagouv/beta.gouv.fr/edit/master/content/_authors/{{id}}.md" target="_blank">Modifier</a></td>
</tr>
{{/emails}}
</tbody>
</table>
